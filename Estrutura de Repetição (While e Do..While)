import java.util.Scanner;

public class Main
{
	public static void main(String[] args)
	{
		int i = 1;
		int max = 10;
		
		System.out.println("Contando até " + max);
		
		//Enquanto a expressão for verdadeira irá ser executado o bloco de instruçao
		while (i <= max)//Condição
		{
		    System.out.println("Valor de i: " + i);
		    
		    i++; //Incremento
		}
		
		
        //Do...While esse comando executa o bloco e depois avalia a expressão. 
        //O bloco deixa de ser executado após a expressão for falsa		
		do
		{
		    System.out.println("Valor de i: " + i);
		    i++;
		    
		} while( i < 15);
	}
}
